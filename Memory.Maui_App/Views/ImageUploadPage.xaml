<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Memory.Maui_App.Views.ImageUploadPage"
             Title="Upload Images">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="LightGray">
        <StackLayout>
            <Label TextColor="Black" Margin="0,20,0,0" Text="Order of pictures will apply on cards" Scale="1.5" HorizontalOptions="Center"></Label>
            <ScrollView HorizontalOptions="CenterAndExpand">
                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                    <FlexLayout x:Name="ImageList">

                    </FlexLayout>
                </StackLayout>
            </ScrollView>
            <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="EndAndExpand" Margin="0,0,0,20">
                <Button TextColor="Black" Text="Select your picture(s) for the cards" Clicked="OnGetPictureClicked"></Button>
                <Button TextColor="Black" Text="Done" Command="{Binding GoBackCommand}"></Button>
            </HorizontalStackLayout>
        </StackLayout>
    </Grid>
</ContentPage>