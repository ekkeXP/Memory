<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="Memory.Maui_App.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:Memory.Maui_App.Views"
	xmlns:local="clr-namespace:Memory.Maui_App"
    Title="Memory Game">

    <Shell.Resources>
        <Thickness x:Key="TabMargin">10</Thickness>
        <Thickness x:Key="TabPadding">5</Thickness>
    </Shell.Resources>
    
    <TabBar>
        <ShellContent Route="UserOptionsPage" ContentTemplate="{DataTemplate views:UserOptionsPage}" Shell.NavBarIsVisible="False"/>
    </TabBar>
    <TabBar>
        <ShellContent Route="ConfirmPage" ContentTemplate="{DataTemplate views:ConfirmPage}" Shell.NavBarIsVisible="False"/>
    </TabBar>
    <TabBar>
        <ShellContent Route="GamePage" ContentTemplate="{DataTemplate views:GamePage}" Shell.NavBarIsVisible="False"/>
    </TabBar>
    <TabBar>
        <ShellContent Route="HighscoresPage" ContentTemplate="{DataTemplate views:HighscoresPage}" Shell.NavBarIsVisible="False"/>
    </TabBar>
    <TabBar>
        <ShellContent Route="ImageUploadPage" ContentTemplate="{DataTemplate views:ImageUploadPage}" Shell.NavBarIsVisible="False"/>
    </TabBar>

</Shell>
